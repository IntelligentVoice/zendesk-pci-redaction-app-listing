{
  "triggers": {
    "iv_trigger": {
      "title": "Transcribe recordings and redact PCI data",
      "actions": [
        {
          "field": "notification_webhook",
          "value": [
            "iv_pci_webhook",
            "{\"ticketid\": \"{{ticket.id}}\", \"ticket.link\": \"{{ticket.link}}\"}"
          ]
        }
      ],
      "conditions": {
        "any": [
          {
            "field": "comment_includes_word",
            "operator": "is",
            "value": "Outbound call to"
          },
          {
            "field": "comment_includes_word",
            "operator": "is",
            "value": "Inbound call from"
          }
        ]
      }
    }
  },
  "webhooks": {
    "iv_pci_webhook": {
      "endpoint": "https://zendesk-pci-2.intelligentvoice.com/public/redact",
      "http_method": "POST",
      "name": "Intelligent Voice PCI Redaction Webhook",
      "request_format": "json",
      "status": "active",
      "subscriptions":  [
        "conditional_ticket_events"
      ]
    }
  }
}
